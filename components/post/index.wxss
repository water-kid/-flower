/* components/post/index.wxss */
.post-container{
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  /* background-color:red; */
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  padding-bottom: 10rpx;
  display: flex;
  flex-direction: column;
}

.post-container .post-author-date{
  margin:10rpx 0rpx 20rpx 10rpx;
  display: flex;
  align-items: center;
}
.post-container .post-author-date image{
  width: 60rpx;
  height: 60rpx;
  /* vertical-align: middle; */
}
.post-container .post-author-date text{
  /* vertical-align: middle; */
  margin-left: 20rpx;
  font-size: 26rpx;
}

.post-title{
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  color: #333;
}

.post-image{
  width: 100%;
  height: 340rpx;
  margin-bottom: 30rpx;
}

.post-content{
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  line-height: 40rpx;
  letter-spacing: 2rpx;
}

.post-like{
  display: flex;
  margin-left: 20rpx;
  align-items: center;
}
.post-like l-icon{

  margin-right: 16rpx;
}

.post-like .post-like-text{
  margin-right: 20rpx;
  font-size: 26rpx;
}