/* pages/movie-details/movie-details.wxss */
.container{
  display: flex;
  flex-direction: column;
}
.head-img{
  width: 100%;
  height: 320rpx;
  -webkit-filter: blur(20px);
}

.movie-img{
  width: 175rpx;
  height: 238rpx;
  position: absolute;
  right: 30rpx;
  top: 160rpx;
}

.head-img-hover{
  height: 320rpx;
  width: 100%;
  position: absolute;
  display: flex;
  flex-direction: column;
}

.head-img-hover .main-title{
  font-size: 38rpx;
  color: #fff;
  font-weight: bold;
  letter-spacing: 2px;
  margin-top: 50rpx;
  margin-left: 40rpx;
}

.head-img-hover .sub-title{
  font-size: 28rpx;
  color: #fff;
  margin-top: 30rpx;
  margin-left: 40rpx;
}

.head-img-hover .like{
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
  margin-left: 40rpx;
}

.head-img-hover .like .highlight-font{
  color: #f21146;
  font-size: 22rpx;
  margin-right: 10rpx;
}

.head-img-hover .like .plain-font{
  font-size: 22rpx;
  margin-right: 30rpx;
  color: #666;
}

.img-container{
  margin-top: 100rpx;
  display: flex;
  height: 500rpx;
}
.img-container image{
  width: 300rpx;
  margin: 20rpx;
  flex-shrink: 0;
}