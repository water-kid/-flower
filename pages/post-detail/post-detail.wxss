/* pages/post-detail/post-detail.wxss */

.container{
  display:flex;
  flex-direction: column;

}
.container .head-image{
  width: 100%;
  height: 460rpx;
}

.container .author-date{
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  margin-left: 30rpx;
  align-items: center;
}
.container .author-date image{
  width: 64rpx;
  height: 64rpx;
}
.container .author-date .author{
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
}

.container .author-date .const-text{
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

.container .author-date .date{
  font-size: 24rpx;
  color: #666;
  margin-left: 30rpx;

}

.container .title{
  margin-left: 40rpx;
  font-size: 36rpx;
  color: #4b556c;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2px;
}

.container .horizon{
  width: 660rpx;
  height: 1px;
  background-color: #e5e5e5;
  /* background-color:red; */
}

.container .circle-image{
  width: 90rpx;
  height: 90rpx;
  margin-right: 30rpx;
}

.icon-container{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 20rpx 0;
}

.icon-container .circle-container{
  width: 100%;
  display:flex;
  flex-direction: row;
  justify-content: flex-end;
}

.icon-container .horizon{
  position: absolute;
  z-index: -99;
}


.content{
  margin: 0 20rpx;
  /* font-size: ; */
}
.banner-container{
  position: relative;
}
.audio{
  width: 102rpx;
  height: 110rpx;
  /* position: absolute;
  z-index: 99; */
  position: absolute;
  top: 0;
  left: 50%;
  margin-left: -51rpx;
  top: 50%;
  margin-top: -55rpx;
  opacity: 0.6;
}

